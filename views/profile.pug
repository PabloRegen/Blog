doctype html
html
	head
		title user profile
	body
		h1 User profile page
		form
			// add this to the form(action='/required path' method='post')
			p
				input(type='text' name='firstName' placeholder='first name' maxlength='30')
				= firstName
			p
				input(type='text' name='lastName' placeholder='last name' maxlength='30')
				= lastName
			p
				textarea(name='bio' placeholder='Enter your bio...')
				= bio
			p
				= userPic
				<br/>
				input(type='file' name='userPic')
			input(type='submit' value='create profile')

		p
			a(href='/') return to homepage
