extends ../layouts/layout.pug

block title
	|create post 

block main
	h1 Create your blog post
	form(action='/posts/create' method='post')
		p
			|Title <br/>
			input(type='text' name='title' required)
		p
			|Subtitle <br/>
			textarea(name='subtitle')
		p
			|Body <br/>
			textarea(name='body' placeholder='Your article goes here...')
		p
			|Add a picture <br/>
			input(type='file' name='postPic')
		p
			input(type='button' value='Save post')
		p
			input(type='submit' value='Create post')
	p
		|<br/> Search for articles (add link)
	p
		a(href='/') Return to Blog.com